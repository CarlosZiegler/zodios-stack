{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "index.ts",
	"scripts": {
		"dev": "tsup src/index.ts --watch --onSuccess \"node dist/index.js\"",
		"start": "node ./dist/index.js",
		"build": "tsup src/index.ts",
		"test": "vitest --config ./vitest.config.ts",
		"test:ui": "vitest --ui",
		"test:ci": "yarn services:up && vitest run --config ./vitest.config.ts --coverage && yarn services:stop",
		"test:coverage": "vitest run --config ./vitest.config.ts --coverage",
		"lint": "eslint --ext .ts src",
		"lint:fix": "eslint --ext .ts src --fix",
		"format": "prettier --write 'src/**/*.ts'",
		"prisma:pull": "npx prisma db pull",
		"prisma:generate": "prisma generate",
		"clean": "rm -rf dist",
		"services:up": "docker-compose -f ./docker-compose.dev.yml up -d",
		"services:stop": "docker-compose -f ./docker-compose.dev.yml stop"
	},
	"author": "Carlos Ricardo Ziegler",
	"license": "ISC",
	"devDependencies": {
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/morgan": "^1.9.4",
		"@types/node": "^20.2.0",
		"@types/swagger-ui-express": "^4.1.3",
		"@vitest/coverage-c8": "^0.30.1",
		"@vitest/ui": "^0.30.1",
		"prisma": "^4.13.0",
		"tsup": "^6.7.0",
		"typescript": "^5.0.4",
		"vitest": "^0.30.1"
	},
	"dependencies": {
		"@hapi/boom": "^10.0.1",
		"@supabase/supabase-js": "^2.21.0",
		"@zodios/core": "^10.9.0",
		"@zodios/express": "^10.6.1",
		"@zodios/openapi": "^10.4.7",
		"axios": "^1.4.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"date-fns": "^2.30.0",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^6.7.0",
		"helmet": "^6.1.5",
		"http-status-codes": "^2.2.0",
		"ioredis": "^5.3.2",
		"morgan": "^1.10.0",
		"rate-limit-redis": "^3.0.2",
		"swagger-ui-express": "^4.6.2",
		"winston": "^3.8.2",
		"zod": "^3.21.4",
		"zod-validation-error": "^1.3.0"
	}
}
